<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/content/main.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="application-inset">
        <header class="container-fluid">
            <div class="row">
                <div class="col-md-4">
                    <a class="logo" href="~/home/index">
                        <img src="~/img/logo.gif" class="img-responsive" />
                        <span> Image gallery </span>
                    </a>
                </div>


                <div class="col-md-8 logIn">
                    <form action="/" id="autentication" method="post">
                        <div class="form-group">
                            <label for="username"> Username </label>
                            <input id="username" name="username" class="form-control" type="text" />
                        </div>
                        <div class="form-group">
                            <label for="Password"> Password </label>
                            <input id="Password" name="password" class="form-control" type="password" />
                        </div>
                        <div class="form-group">
                            <button id="Submit" class="form-control btn btn-success" type="submit"> Submit </button>
                        </div>
                    </form>
                </div>

            </div>
        </header>

        <div class="container body-content">
            @RenderBody()
        </div>
        <footer>
            <div class="container">
                <div>&copy; @DateTime.Now.Year - My aplication ASP.NET</div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
